<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Function.PlayActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/play_frame"
        android:layout_width="match_parent"
        android:layout_height="640dp">

        <ImageView
            android:id="@+id/gridmap"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:padding="0dp"
            android:src="@drawable/gridmap"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/task"
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="228dp"
            android:backgroundTint="#F2F2F2"
            android:drawableBottom="@drawable/renwu"
            app:iconPadding="8dp"/>

        <Button
            android:id="@+id/teamchat"
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:backgroundTint="#F2F2F2"
            android:drawableBottom="@drawable/chat"/>

        <Button
            android:id="@+id/editperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:text="Button"/>
    </LinearLayout>

</LinearLayout>